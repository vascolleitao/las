#pragma once

#include <sstream>

namespace las::version
{
  // clang-format off
  constexpr int MAJOR = @SKL_VERSION_MAJOR@;
  constexpr int MINOR = @SKL_VERSION_MINOR@;
  constexpr int PATCH = @SKL_VERSION_PATCH@;
  // clang-format on

  inline std::string to_string()
  {
    std::stringstream ss;
    ss << MAJOR << "." << MINOR << "." << PATCH;
    return ss.str();
  }

  inline std::string active_layers()
  {
    std::stringstream ss;
    ss

#ifdef SKL_STATIC_LAYERS
      << "static layers: "
#ifdef SKL_CPU_LAYER
      << "cpu"
#endif
#ifdef SKL_OMP_LAYER
      << ", omp"
#endif

#elif SKL_DYNAMIC_LAYERS
      << "dynamic layers"
#else

      << "default layers"
#endif
      ;
    return ss.str();
  }
}// namespace las::version
